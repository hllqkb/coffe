/**garden.wxss**/
.container {
  background: linear-gradient(180deg, #87CEEB 0%, #F5F5DC 30%, #F5F5DC 100%);
  min-height: 100vh;
  padding: 0;
}

/* 庄园头部 */
.garden-header {
  position: relative;
  margin-bottom: 20rpx;
}

.header-bg {
  background: linear-gradient(135deg, #228B22, #32CD32);
  padding: 60rpx 40rpx 40rpx;
  border-radius: 0 0 50rpx 50rpx;
  color: white;
  text-align: center;
}

.garden-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.garden-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 资源栏 */
.resources-bar {
  display: flex;
  justify-content: space-around;
  background: white;
  margin: 20rpx;
  padding: 25rpx;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.resource-item {
  display: flex;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.resource-item image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.resource-item text {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 8rpx;
}

.resource-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: #32CD32;
  color: white;
  font-size: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

/* 咖啡树容器 */
.trees-container {
  padding: 0 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin: 30rpx 0 20rpx;
  text-align: center;
}

/* 咖啡树卡片 */
.tree-card {
  background: white;
  border-radius: 25rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(139, 69, 19, 0.15);
  border: 2rpx solid #F0E68C;
}

.tree-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: linear-gradient(135deg, #F0E68C, #DEB887);
}

.tree-info {
  flex: 1;
}

.tree-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 5rpx;
}

.tree-stage {
  font-size: 24rpx;
  color: #A0522D;
}

.tree-actions .action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: white;
  border: 2rpx solid #8B4513;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.tree-actions .action-btn image {
  width: 30rpx;
  height: 30rpx;
}

/* 咖啡树展示区域 */
.tree-display {
  padding: 30rpx;
}

.tree-image-container {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.tree-image {
  width: 100%;
  height: 100%;
}

.photo-indicator {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-indicator image {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
}

.progress-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  padding: 15rpx;
  color: white;
}

.progress-container {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #32CD32, #228B22);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 22rpx;
  text-align: center;
  display: block;
}

.status-tags {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tag {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  color: white;
  font-weight: bold;
}

.tag-stage {
  background: rgba(139, 69, 19, 0.9);
}

.tag-health.healthy {
  background: rgba(50, 205, 50, 0.9);
}

.tag-health.thirsty {
  background: rgba(255, 165, 0, 0.9);
}

.tag-health.sick {
  background: rgba(255, 69, 0, 0.9);
}

/* 树的详细信息 */
.tree-details {
  background: #F9F9F9;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 25rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #666;
}

.detail-value {
  color: #333;
  font-weight: 500;
}

/* 操作按钮 */
.tree-operations {
  display: flex;
  justify-content: space-around;
  padding: 25rpx;
  background: #F9F9F9;
  flex-wrap: wrap;
  gap: 15rpx;
}

.operation-btn {
  flex: 1;
  min-width: 120rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  position: relative;
  transition: all 0.3s ease;
}

.operation-btn:active {
  transform: scale(0.95);
}

.operation-btn:disabled {
  opacity: 0.5;
  transform: none;
}

.water-btn {
  background: linear-gradient(135deg, #4169E1, #1E90FF);
}

.fertilizer-btn {
  background: linear-gradient(135deg, #228B22, #32CD32);
}

.harvest-btn {
  background: linear-gradient(135deg, #FF8C00, #FFA500);
}

.photo-btn {
  background: linear-gradient(135deg, #8B4513, #A0522D);
}

.operation-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.btn-cost {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  font-size: 18rpx;
  background: rgba(0, 0, 0, 0.3);
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
}

/* 成长日志 */
.growth-log {
  padding: 25rpx;
  background: #F0F8FF;
  border-top: 1rpx solid #E0E0E0;
}

.log-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 20rpx;
}

.log-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 24rpx;
}

.log-time {
  width: 150rpx;
  color: #999;
  flex-shrink: 0;
}

.log-content {
  flex: 1;
  color: #333;
}

/* 庄园装饰 */
.garden-decorations {
  padding: 0 20rpx 30rpx;
}

.decorations-scroll {
  white-space: nowrap;
  padding: 20rpx 0;
}

.decoration-item {
  width: 120rpx;
  height: 160rpx;
  margin: 0 10rpx;
  padding: 10rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.decoration-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 5rpx;
  flex-shrink: 0;
}

.decoration-item text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  margin-bottom: 5rpx;
  flex-shrink: 0;
}

.decoration-btn {
  width: 80rpx;
  height: 50rpx;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 25rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 浮动操作按钮 */
.floating-actions {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  z-index: 100;
}

.floating-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  color: white;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 107, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.floating-btn image {
  width: 50rpx;
  height: 50rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-state text {
  font-size: 28rpx;
  display: block;
  margin-bottom: 15rpx;
}

.empty-state .btn {
  margin-top: 30rpx;
  padding: 20rpx 40rpx;
}

/* 收获模态框 */
.harvest-modal {
  text-align: center;
}

.harvest-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}

.harvest-result image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.harvest-info {
  text-align: center;
}

.harvest-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 10rpx;
  display: block;
}

.harvest-amount {
  font-size: 26rpx;
  color: #32CD32;
  margin-bottom: 5rpx;
  display: block;
}

.harvest-quality {
  font-size: 24rpx;
  color: #FF8C00;
  display: block;
}

.harvest-rewards {
  background: #F0F8FF;
  border-radius: 15rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.harvest-rewards text {
  font-size: 26rpx;
  color: #8B4513;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.reward-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.reward-item image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.reward-item text {
  font-size: 24rpx;
  color: #333;
  margin: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .tree-operations {
    flex-direction: column;
    align-items: center;
  }
  
  .operation-btn {
    width: 200rpx;
    margin-bottom: 15rpx;
  }
  
  .tree-image-container {
    width: 250rpx;
    height: 250rpx;
  }
}

/* 动画效果 */
@keyframes treeGrow {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.tree-image {
  animation: treeGrow 0.5s ease-out;
}

@keyframes waterDrop {
  0% {
    transform: translateY(-20rpx);
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: translateY(0);
    opacity: 0;
  }
}

.water-effect {
  animation: waterDrop 1s ease-out;
}