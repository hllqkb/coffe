/* 订单页面样式 */
.orders-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 状态筛选标签 */
.status-tabs {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tabs-scroll {
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin: 0 16rpx;
  border-radius: 40rpx;
  background-color: #f8f8f8;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #4CAF50;
  color: #fff;
}

.tab-name {
  margin-right: 8rpx;
}

.tab-count {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 订单列表 */
.orders-list {
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 订单卡片 */
.order-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-info {
  flex: 1;
}

.order-number {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #fff3cd;
  color: #856404;
}

.status-paid {
  background-color: #d4edda;
  color: #155724;
}

.status-shipped {
  background-color: #cce5ff;
  color: #004085;
}

.status-delivered {
  background-color: #e2e3e5;
  color: #383d41;
}

.status-completed {
  background-color: #d1ecf1;
  color: #0c5460;
}

.status-cancelled {
  background-color: #f8d7da;
  color: #721c24;
}

/* 商品列表 */
.order-products {
  padding: 24rpx;
}

.product-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.product-info {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-spec {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.product-price-qty {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 500;
}

.product-qty {
  font-size: 24rpx;
  color: #999;
}

.more-products {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
  border-top: 1rpx solid #f0f0f0;
}

/* 订单金额 */
.order-amount {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.amount-value {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: 600;
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  background-color: #fff;
  color: #666;
}

.btn-cancel {
  border-color: #ff6b6b;
  color: #ff6b6b;
}

.btn-pay {
  background-color: #4CAF50;
  border-color: #4CAF50;
  color: #fff;
}

.btn-confirm {
  background-color: #2196F3;
  border-color: #2196F3;
  color: #fff;
}

.btn-evaluate {
  background-color: #FF9800;
  border-color: #FF9800;
  color: #fff;
}

.btn-detail {
  border-color: #999;
  color: #999;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

/* 客服按钮 */
.service-btn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  z-index: 1000;
}

.service-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* 通用按钮样式 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
}

.btn-primary {
  background-color: #4CAF50;
  color: #fff;
}