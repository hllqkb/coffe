/* pages/checkin/checkin.wxss */
.checkin-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

/* 头部背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.header-bg image {
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  margin: 100rpx 30rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.user-avatar {
  position: relative;
  margin-right: 30rpx;
}

.user-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
}

.level-badge {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  border: 2rpx solid #fff;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.exp-bar {
  position: relative;
  width: 100%;
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.exp-progress {
  height: 100%;
  background: linear-gradient(90deg, #4ecdc4, #44a08d);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.exp-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  color: #666;
}

/* 签到状态 */
.checkin-status {
  margin: 0 30rpx 30rpx;
}

.status-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.status-info {
  display: flex;
  justify-content: space-around;
}

.consecutive-days,
.total-days {
  text-align: center;
}

.number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4ecdc4;
  margin-bottom: 10rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
}

/* 签到按钮区域 */
.checkin-button-area {
  margin: 0 30rpx 40rpx;
  display: flex;
  justify-content: center;
}

.checkin-btn {
  width: 300rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
  border-radius: 60rpx;
  border: none;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(78, 205, 196, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkin-btn:active {
  transform: scale(0.95);
}

.checkin-btn.checked {
  background: linear-gradient(135deg, #95a5a6, #7f8c8d);
  box-shadow: 0 5rpx 15rpx rgba(149, 165, 166, 0.3);
}

.checkin-btn[disabled] {
  opacity: 0.6;
}

.btn-content {
  display: flex;
  align-items: center;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.btn-icon {
  margin-left: 15rpx;
}

.btn-icon image {
  width: 40rpx;
  height: 40rpx;
}

@keyframes ripple {
  to {
    width: 400rpx;
    height: 400rpx;
    opacity: 0;
  }
}

/* 签到奖励日历 */
.reward-calendar {
  margin: 0 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.calendar-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.reward-item {
  width: calc(100% / 7 - 10rpx);
  margin-bottom: 20rpx;
  text-align: center;
  position: relative;
  padding: 20rpx 10rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.reward-item.today {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  transform: scale(1.05);
}

.reward-item.received {
  background: #f0f9ff;
  border: 2rpx solid #4ecdc4;
}

.reward-day {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.reward-item.today .reward-day {
  color: white;
}

.reward-icon {
  position: relative;
  margin-bottom: 10rpx;
}

.reward-icon image {
  width: 40rpx;
  height: 40rpx;
}

.reward-amount {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff6b6b;
  color: white;
  font-size: 16rpx;
  padding: 2rpx 6rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

.reward-name {
  font-size: 20rpx;
  color: #666;
}

.reward-item.today .reward-name {
  color: white;
}

.received-mark {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 30rpx;
  height: 30rpx;
  background: #4ecdc4;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.received-mark image {
  width: 20rpx;
  height: 20rpx;
}

/* 资源展示 */
.resources-display {
  margin: 0 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.resources-display {
  margin: 0 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
}

.resource-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 20rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  margin: 0 10rpx;
  transition: all 0.3s ease;
}

.resource-item:first-child {
  margin-left: 0;
}

.resource-item:last-child {
  margin-right: 0;
}

.resource-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
}

.resource-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.resource-name {
  font-size: 24rpx;
  color: #666;
}

/* 快捷操作 */
.quick-actions {
  margin: 0 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
}

.action-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 0 10rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-button:first-child {
  margin-left: 0;
}

.action-button:last-child {
  margin-right: 0;
}

.action-button:active {
  transform: scale(0.95);
}

.action-button image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 15rpx;
}

.action-button text {
  font-size: 24rpx;
  color: #333;
}

/* 底部导航 */
.bottom-nav {
  margin: 0 30rpx 40rpx;
  display: flex;
  justify-content: center;
}

.nav-button {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.nav-button:active {
  transform: scale(0.95);
}

.nav-button image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.nav-button text {
  font-size: 28rpx;
  color: #333;
}

/* 奖励弹窗 */
.reward-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  animation: modalShow 0.3s ease;
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.modal-header {
  position: relative;
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn image {
  width: 30rpx;
  height: 30rpx;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.reward-display {
  margin-bottom: 30rpx;
}

.reward-display image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.reward-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.congratulations text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.modal-footer {
  padding: 0 30rpx 30rpx;
}

.confirm-btn {
  width: 100%;
  padding: 25rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  text-align: center;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  color: white;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-overlay text {
  font-size: 28rpx;
}