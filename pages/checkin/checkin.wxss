/**checkin.wxss**/
.container {
  background: #F8F9FA;
  min-height: 100vh;
  position: relative;
  padding-bottom: 120rpx;
}

/* 头部背景 */
.header-bg {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.header-bg image {
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(139, 69, 19, 0.8), rgba(160, 82, 45, 0.6));
}

/* 签到状态卡片 */
.checkin-card {
  background: white;
  margin: -100rpx 20rpx 30rpx;
  border-radius: 25rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.checkin-status {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.status-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 25rpx;
}

.status-icon image {
  width: 100%;
  height: 100%;
}

.status-text {
  flex: 1;
}

.status-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.status-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 签到按钮 */
.checkin-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #8B4513, #A0522D);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.checkin-btn:not(:disabled):active {
  transform: scale(0.98);
}

.checkin-btn.checked {
  background: #CCCCCC;
  color: #999;
}

.checkin-btn:disabled {
  opacity: 0.6;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-content image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

/* 连续签到信息 */
.streak-info {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  border-top: 1rpx solid #F0F0F0;
}

.streak-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.streak-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #8B4513;
  display: block;
  margin-bottom: 8rpx;
}

.streak-label {
  font-size: 24rpx;
  color: #999;
}

/* 奖励区域 */
.reward-section {
  margin: 0 20rpx 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.view-all {
  margin-left: auto;
  font-size: 26rpx;
  color: #8B4513;
  font-weight: normal;
}

.reward-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.reward-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.reward-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.reward-status {
  font-size: 24rpx;
  color: #8B4513;
  background: #F0E68C;
  padding: 6rpx 15rpx;
  border-radius: 15rpx;
}

.reward-items {
  display: flex;
  justify-content: space-around;
}

.reward-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.reward-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.reward-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.reward-amount {
  font-size: 26rpx;
  font-weight: bold;
  color: #8B4513;
}

/* 连续签到奖励 */
.streak-rewards {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.streak-reward-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.streak-reward-title text:first-child {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.streak-progress {
  font-size: 24rpx;
  color: #8B4513;
  background: #F0E68C;
  padding: 6rpx 15rpx;
  border-radius: 15rpx;
}

.streak-reward-list {
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.streak-reward-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  padding: 20rpx 15rpx;
  border-radius: 15rpx;
  min-width: 120rpx;
  position: relative;
  transition: all 0.3s ease;
}

.streak-reward-item.received {
  background: linear-gradient(135deg, #8B4513, #A0522D);
  color: white;
}

.streak-reward-item.current {
  background: #F0E68C;
  border: 2rpx solid #8B4513;
}

.streak-reward-item.locked {
  background: #F5F5F5;
  opacity: 0.6;
}

.reward-day {
  font-size: 22rpx;
  margin-bottom: 10rpx;
  color: inherit;
}

.reward-icon-container {
  position: relative;
  margin-bottom: 10rpx;
}

.reward-icon-container image {
  width: 50rpx;
  height: 50rpx;
}

.reward-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 20rpx;
  height: 20rpx;
  background: #4CAF50;
  color: white;
  border-radius: 10rpx;
  font-size: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reward-info {
  text-align: center;
}

.reward-info .reward-name {
  font-size: 22rpx;
  display: block;
  margin-bottom: 5rpx;
}

.reward-info .reward-amount {
  font-size: 20rpx;
  font-weight: bold;
}

/* 签到日历 */
.calendar-section {
  margin: 0 20rpx 30rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 25rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.month-btn {
  width: 60rpx;
  height: 60rpx;
  background: #F5F5F5;
  border: none;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.month-btn image {
  width: 30rpx;
  height: 30rpx;
}

.month-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.calendar-weekdays {
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #F0F0F0;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
  background: white;
  padding: 0 30rpx 30rpx;
  border-radius: 0 0 20rpx 20rpx;
}

.calendar-day {
  width: calc(100% / 7);
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 10rpx;
}

.calendar-day.other-month {
  opacity: 0.3;
}

.calendar-day.today {
  background: #F0E68C;
  border-radius: 10rpx;
}

.calendar-day.checked {
  background: linear-gradient(135deg, #8B4513, #A0522D);
  border-radius: 10rpx;
  color: white;
}

.day-number {
  font-size: 26rpx;
  font-weight: bold;
}

.day-indicator {
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background: #4CAF50;
  border-radius: 4rpx;
}

/* 签到记录 */
.history-section {
  margin: 0 20rpx 30rpx;
}

.history-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.history-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-date {
  flex: 1;
}

.date-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.time-text {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.history-rewards {
  display: flex;
  margin-right: 20rpx;
}

.history-reward {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.history-reward image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.history-reward text {
  font-size: 24rpx;
  color: #8B4513;
  font-weight: bold;
}

.history-status {
  flex-shrink: 0;
}

.status-badge {
  background: #4CAF50;
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.empty-history {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.empty-history image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-history text {
  font-size: 28rpx;
  color: #999;
}

/* 签到规则 */
.rules-section {
  margin: 0 20rpx 30rpx;
}

.rules-content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.rule-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.rule-item:last-child {
  margin-bottom: 0;
}

.rule-dot {
  width: 8rpx;
  height: 8rpx;
  background: #8B4513;
  border-radius: 4rpx;
  margin-top: 12rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.rule-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 浮动操作按钮 */
.fab-container {
  position: fixed;
  bottom: 150rpx;
  right: 30rpx;
  z-index: 100;
}

.fab-btn {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #8B4513, #A0522D);
  border: none;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(139, 69, 19, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.fab-btn image {
  width: 50rpx;
  height: 50rpx;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 25rpx;
  max-width: 90%;
  max-height: 80%;
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

/* 签到成功模态框 */
.success-modal {
  padding: 50rpx 40rpx;
  text-align: center;
  width: 600rpx;
}

.success-header {
  margin-bottom: 40rpx;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.success-rewards {
  margin-bottom: 40rpx;
}

.rewards-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 25rpx;
  display: block;
}

.success-reward-list {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.success-reward-item {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  padding: 15rpx 20rpx;
  border-radius: 25rpx;
  margin: 0 10rpx 15rpx;
}

.success-reward-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.reward-details {
  display: flex;
  flex-direction: column;
}

.reward-details .reward-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 3rpx;
}

.reward-details .reward-amount {
  font-size: 26rpx;
  font-weight: bold;
  color: #8B4513;
}

.success-streak {
  margin-bottom: 40rpx;
}

.streak-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  display: block;
  margin-bottom: 10rpx;
}

.streak-encourage {
  font-size: 26rpx;
  color: #666;
}

.success-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #8B4513, #A0522D);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/* 奖励历史模态框 */
.reward-modal {
  width: 90%;
  height: 70%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  background: #F5F5F5;
  border: none;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.close-btn image {
  width: 30rpx;
  height: 30rpx;
}

.reward-history-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.reward-history-item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.reward-history-item:last-child {
  border-bottom: none;
}

.reward-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.reward-details {
  display: flex;
  flex-wrap: wrap;
}

.reward-detail {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.reward-detail image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.reward-detail .reward-name {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.reward-detail .reward-amount {
  font-size: 24rpx;
  font-weight: bold;
  color: #8B4513;
}

.no-more-rewards {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 26rpx;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1001;
}

.loading-container image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.loading-container text {
  font-size: 28rpx;
  color: #999;
}

/* 动画效果 */
@keyframes bounceIn {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.checkin-card {
  animation: bounceIn 0.6s ease-out;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.checkin-btn:not(.checked):not(:disabled) {
  animation: pulse 2s infinite;
}

@keyframes slideInUp {
  from {
    transform: translateY(30rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.reward-section,
.calendar-section,
.history-section,
.rules-section {
  animation: slideInUp 0.5s ease-out;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .success-modal {
    width: 90%;
    padding: 40rpx 30rpx;
  }
  
  .success-reward-item {
    margin: 0 5rpx 10rpx;
    padding: 12rpx 15rpx;
  }
  
  .calendar-day {
    height: 70rpx;
  }
  
  .day-number {
    font-size: 24rpx;
  }
}