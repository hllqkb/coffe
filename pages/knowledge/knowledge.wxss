/**knowledge.wxss**/
.container {
  background: #F8F9FA;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 搜索头部 */
.search-header {
  background: white;
  padding: 30rpx 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 分类导航 */
.category-nav {
  background: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  padding: 15rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  min-width: 100rpx;
}

.category-item.active {
  background: linear-gradient(135deg, #8B4513, #A0522D);
  color: white;
}

.category-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 8rpx;
}

.category-item text {
  font-size: 24rpx;
  text-align: center;
}

.category-item.active text {
  color: white;
}

/* 推荐内容 */
.featured-section {
  margin: 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
}

.section-title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.featured-swiper {
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.featured-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.featured-item image {
  width: 100%;
  height: 100%;
}

.featured-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.featured-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.featured-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 内容列表 */
.content-list {
  padding: 0 20rpx;
}

.content-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.content-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.12);
}

/* 视频内容样式 */
.video-content {
  padding: 0;
}

.video-container {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.video-cover {
  width: 100%;
  height: 100%;
}

.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-button image {
  width: 50rpx;
  height: 50rpx;
}

.video-duration {
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
}

.content-info {
  padding: 25rpx;
}

.content-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.content-meta {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.meta-item image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.content-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 文章内容样式 */
.article-content {
  padding: 25rpx;
}

.article-header {
  display: flex;
  align-items: flex-start;
}

.article-header .content-info {
  flex: 1;
  padding: 0;
  margin-right: 20rpx;
}

.article-thumb {
  width: 200rpx;
  height: 150rpx;
  border-radius: 15rpx;
  flex-shrink: 0;
}

/* 问答内容样式 */
.qa-content {
  padding: 25rpx;
}

.qa-question {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.qa-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.qa-answer {
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
}

.qa-answer text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.qa-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 内容标签 */
.content-tags {
  padding: 0 25rpx 25rpx;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background: #F0E68C;
  color: #8B4513;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.loading-container image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-state text {
  font-size: 28rpx;
  display: block;
  margin-bottom: 15rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
}

.load-more-btn {
  background: linear-gradient(135deg, #8B4513, #A0522D);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 内容详情模态框 */
.content-modal .modal-content {
  width: 90%;
  max-height: 80%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #F5F5F5;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.close-btn image {
  width: 30rpx;
  height: 30rpx;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

/* 视频播放器 */
.video-player {
  margin-bottom: 30rpx;
}

.video {
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
}

/* 文章详情 */
.article-detail {
  line-height: 1.6;
}

.detail-image {
  width: 100%;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
}

.article-text {
  font-size: 28rpx;
  color: #333;
}

/* 问答详情 */
.qa-detail {
  line-height: 1.6;
}

.detail-question {
  margin-bottom: 30rpx;
}

.question-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  display: block;
  margin-bottom: 15rpx;
}

.question-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.detail-answer {
  margin-bottom: 30rpx;
}

.answer-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  display: block;
  margin-bottom: 15rpx;
}

.answer-content {
  font-size: 26rpx;
  color: #666;
}

.expert-info {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 15rpx;
}

.expert-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.expert-details {
  flex: 1;
}

.expert-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.expert-title {
  font-size: 24rpx;
  color: #999;
}

/* 互动区域 */
.interaction-area {
  display: flex;
  justify-content: space-around;
  padding: 25rpx 30rpx;
  border-top: 1rpx solid #F0F0F0;
  background: #F8F9FA;
}

.interaction-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
  padding: 15rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.interaction-btn:active {
  background: rgba(139, 69, 19, 0.1);
}

.interaction-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.interaction-btn text {
  font-size: 24rpx;
  color: #666;
}

.like-btn.liked image {
  filter: hue-rotate(320deg) saturate(2);
}

.like-btn.liked text {
  color: #FF6B6B;
}

/* 评论模态框 */
.comment-modal .modal-content {
  width: 90%;
  height: 70%;
  display: flex;
  flex-direction: column;
}

.comment-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 30rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-user {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.empty-comments {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 26rpx;
}

.comment-input-area {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #F0F0F0;
  background: white;
}

.comment-input {
  flex: 1;
  background: #F5F5F5;
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
  font-size: 26rpx;
  margin-right: 15rpx;
}

.send-comment-btn {
  background: linear-gradient(135deg, #8B4513, #A0522D);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
}

.send-comment-btn:disabled {
  background: #CCCCCC;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .article-header {
    flex-direction: column;
  }
  
  .article-thumb {
    width: 100%;
    height: 200rpx;
    margin-top: 20rpx;
  }
  
  .video-container {
    height: 300rpx;
  }
  
  .featured-swiper {
    height: 300rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.content-card {
  animation: fadeIn 0.5s ease-out;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.play-button {
  animation: pulse 2s infinite;
}