/* pages/comments/comments.wxss */
.comments-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 帖子信息 */
.post-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.user-info {
  flex: 1;
}

.username {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

/* 帖子互动区域 */
.post-actions {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-top: 1rpx solid #f5f5f5;
  gap: 40rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background: #f5f5f5;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-icon.liked {
  filter: hue-rotate(320deg) saturate(2);
}

.action-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.action-text.liked {
  color: #ff6b6b;
  font-weight: bold;
}

/* 评论区域 */
.comments-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.section-title {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.comments-list {
  padding: 0 30rpx;
}

.comment-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  background-color: #f0f0f0;
}

.comment-user-info {
  flex: 1;
}

.comment-username {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  margin-bottom: 15rpx;
  margin-left: 75rpx;
}

.reply-to {
  color: #007aff;
  font-weight: 500;
}

.comment-actions {
  display: flex;
  gap: 40rpx;
  margin-left: 75rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 0;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
  transition: color 0.3s;
}

.action-text.liked {
  color: #ff4757;
}

/* 回复列表 */
.replies-list {
  margin-left: 75rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.reply-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.reply-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.reply-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.reply-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background-color: #f0f0f0;
}

.reply-user-info {
  flex: 1;
}

.reply-username {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.reply-time {
  font-size: 20rpx;
  color: #999;
}

.reply-content {
  font-size: 26rpx;
  line-height: 1.5;
  color: #333;
  margin-left: 62rpx;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  padding: 60rpx 30rpx;
  text-align: center;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 评论输入框 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  z-index: 1000;
}

.reply-tip {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
  background-color: #f8f9fa;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  color: #666;
}

.cancel-reply {
  color: #007aff;
  font-size: 24rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.comment-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

.send-btn {
  width: 120rpx;
  height: 70rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

.send-btn::after {
  border: none;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .post-images {
    gap: 8rpx;
  }
  
  .post-image {
    width: calc(33.33% - 6rpx);
    height: 180rpx;
  }
}

/* 动画效果 */
.comment-item {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.action-item {
  transition: transform 0.2s;
}

.action-item:active {
  transform: scale(0.95);
}