/* pages/profile/invite/invite.wxss */
.invite-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 20rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 邀请码卡片 */
.invite-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.invite-code-section {
  margin-bottom: 40rpx;
}

.invite-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.invite-code-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx dashed #8B4513;
}

.invite-code {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
  letter-spacing: 4rpx;
}

.copy-btn {
  display: flex;
  align-items: center;
  background: #8B4513;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
}

.copy-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

/* 邀请统计 */
.invite-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #eee;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1;
}

.action-btn.primary {
  background: #8B4513;
  color: #fff;
}

.action-btn.secondary {
  background: #fff;
  color: #8B4513;
  border: 2rpx solid #8B4513;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 奖励信息 */
.reward-info {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.reward-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.gift-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.reward-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reward-item {
  display: flex;
  align-items: center;
}

.reward-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.reward-icon image {
  width: 100%;
  height: 100%;
}

.reward-text {
  flex: 1;
}

.reward-text .reward-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.reward-text .reward-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 邀请记录 */
.invite-records {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.record-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.record-avatar image {
  width: 100%;
  height: 100%;
}

.record-info {
  flex: 1;
}

.record-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.record-reward {
  display: flex;
  align-items: center;
}

.reward-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  margin-right: 8rpx;
}

.coin-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: #fff;
  border-radius: 20rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: #fff;
  border-radius: 20rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}