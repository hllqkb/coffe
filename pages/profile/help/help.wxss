/* pages/profile/help/help.wxss */
.help-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 搜索区域 */
.search-section {
  padding: 0 30rpx 20rpx;
}

.search-box {
  position: relative;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-btn {
  padding: 10rpx;
}

.clear-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 分类选择 */
.category-section {
  padding: 0 30rpx 20rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  gap: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 20rpx;
  min-width: 120rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.category-item.active {
  background: #8B4513;
  color: white;
}

.category-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: inherit;
}

/* 帮助列表 */
.help-list {
  padding: 0 30rpx;
}

.help-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.help-item:active {
  transform: scale(0.98);
}

.question-section {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.question-content {
  flex: 1;
}

.question-text {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.question-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  background: #f0f8ff;
  color: #8B4513;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.views {
  display: flex;
  align-items: center;
  color: #999;
}

.eye-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.view-count {
  font-size: 22rpx;
}

.expand-icon {
  padding: 10rpx;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

.answer-section {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.answer-section.expanded {
  max-height: 1000rpx;
}

.answer-content {
  padding: 30rpx;
  background: #f8f9fa;
}

.answer-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  white-space: pre-line;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 底部操作 */
.bottom-actions {
  padding: 40rpx 30rpx;
}

.action-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: #8B4513;
  color: white;
}

.action-btn.secondary {
  background: #f0f8ff;
  color: #8B4513;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 联系信息 */
.contact-info {
  margin: 20rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.contact-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.contact-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.contact-list {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
}

.contact-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}