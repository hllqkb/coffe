/* pages/community/community.wxss */
.container {
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 头部区域 */
.header {
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  padding: 60rpx 15rpx 30rpx;
  color: white;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 20rpx;
}

.header-content {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

.publish-btn {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  backdrop-filter: blur(10rpx);
  min-width: 140rpx;
  flex-shrink: 0;
}

.publish-icon {
  width: 36rpx;
  height: 36rpx;
}

.publish-btn text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 搜索容器 */
.search-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  z-index: 100;
  transform: translateY(-100%);
  transition: transform 0.3s ease;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-container.show {
  transform: translateY(0);
}

.search-box {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  min-width: 0;
  width: 100%;
  box-sizing: border-box;
}

.search-actions {
  display: flex;
  gap: 20rpx;
  flex-shrink: 0;
}

.search-confirm,
.search-cancel {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.search-confirm {
  color: #8B4513;
  font-weight: bold;
}

.search-cancel {
  color: #999;
}

/* 帖子容器 */
.posts-container {
  height: calc(100vh - 200rpx);
  padding: 0 15rpx;
}

.post-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 帖子头部 */
.post-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
  border: 2rpx solid #F0E68C;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  display: block;
  margin-bottom: 5rpx;
}

.post-time {
  font-size: 22rpx;
  color: #999;
  display: block;
}

/* 帖子内容 */
.post-content {
  padding: 20rpx;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 媒体展示 */
.post-media {
  padding: 0 20rpx 20rpx;
}

.images-grid {
  display: grid;
  gap: 8rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.images-1 {
  grid-template-columns: 1fr;
}

.images-2 {
  grid-template-columns: 1fr 1fr;
}

.images-3 {
  grid-template-columns: 2fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.images-3 .post-image:first-child {
  grid-row: 1 / 3;
}

.images-4 {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.images-many {
  grid-template-columns: 1fr 1fr 1fr;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}

.images-1 .post-image {
  height: 400rpx;
}

.images-2 .post-image {
  height: 250rpx;
}

.images-3 .post-image:first-child {
  height: 400rpx;
}

.images-3 .post-image:not(:first-child) {
  height: 196rpx;
}

.images-4 .post-image {
  height: 200rpx;
}

.post-video {
  width: 100%;
  border-radius: 15rpx;
}

/* 互动区域 */
.post-actions {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-top: 1rpx solid #f5f5f5;
  gap: 40rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background: #f5f5f5;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-icon.liked {
  filter: hue-rotate(320deg) saturate(2);
}

.action-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.action-text.liked {
  color: #ff6b6b;
  font-weight: bold;
}

/* 加载状态 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  gap: 15rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
}

.loading-more text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-state text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 25rpx 25rpx 0 0;
  width: 100%;
  max-height: 80vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

/* 发布表单 */
.publish-form {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.publish-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #f5f5f5;
  border-radius: 15rpx;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.publish-textarea:focus {
  border-color: #8B4513;
}

/* 媒体选择 */
.media-section {
  margin-bottom: 30rpx;
}

.image-preview {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.preview-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 15rpx;
  overflow: hidden;
}

.preview-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.video-preview {
  position: relative;
  margin-bottom: 20rpx;
}

.video-preview video {
  width: 100%;
  border-radius: 15rpx;
}

.video-delete {
  top: 15rpx;
  right: 15rpx;
}

.media-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.media-btn {
  flex: 1;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #8B4513;
}

.media-btn:disabled {
  opacity: 0.5;
  color: #999;
}

.media-btn image {
  width: 32rpx;
  height: 32rpx;
}

/* 模态框底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.cancel-btn {
  flex: 1;
  background: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  min-width: 0;
}

.publish-submit-btn {
  flex: 2;
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  min-width: 0;
}

.publish-submit-btn:disabled {
  background: #ccc;
  color: #999;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-content image {
  width: 80rpx;
  height: 80rpx;
}

.loading-content text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: bold;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .posts-container {
    padding: 0 20rpx;
  }
  
  .header {
    padding: 50rpx 20rpx 20rpx;
  }
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    transform: translateY(30rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.post-item {
  animation: slideInUp 0.5s ease-out;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.action-item:active {
  animation: pulse 0.3s ease;
}

/* 点赞动画 */
@keyframes heartBeat {
  0% {
    transform: scale(1);
  }
  14% {
    transform: scale(1.3);
  }
  28% {
    transform: scale(1);
  }
  42% {
    transform: scale(1.3);
  }
  70% {
    transform: scale(1);
  }
}

.action-icon.liked {
  animation: heartBeat 0.8s ease;
}