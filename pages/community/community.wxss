/* pages/community/community.wxss */
.container {
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 头部区域 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.layout-switch {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  padding: 6rpx;
  margin-right: 20rpx;
}

.switch-item {
  padding: 12rpx 20rpx;
  border-radius: 40rpx;
  transition: all 0.3s ease;
  color: white;
  font-size: 26rpx;
  text-align: center;
  cursor: pointer;
}

.switch-item.active {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  font-weight: 600;
}

.switch-item image {
  width: 28rpx;
  height: 28rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  margin-left: 15rpx;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.action-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.action-btn text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

/* 搜索容器 */
.search-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 200rpx;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.search-container.show {
  opacity: 1;
  visibility: visible;
}

.search-box {
  background: white;
  margin: 0 40rpx;
  border-radius: 25rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  width: calc(100% - 80rpx);
  max-width: 600rpx;
  transform: translateY(-50rpx);
  transition: all 0.3s ease;
}

.search-container.show .search-box {
  transform: translateY(0);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9ff;
  border-radius: 50rpx;
  padding: 0 25rpx;
  margin-bottom: 25rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.search-input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
  opacity: 0.6;
}

.search-input-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  padding: 25rpx 0;
  font-size: 30rpx;
  background: transparent;
  border: none;
  color: #333;
}

.clear-btn {
  width: 32rpx;
  height: 32rpx;
  background: #ccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 15rpx;
}

.clear-btn image {
  width: 20rpx;
  height: 20rpx;
}

.search-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.search-confirm, .search-cancel {
  flex: 1;
  padding: 25rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.search-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.search-confirm:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.3);
}

.search-cancel {
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.search-cancel:active {
  background: #e8e8e8;
}

/* 帖子容器 */
.posts-container {
  padding: 0 20rpx;
}

/* 网格模式下的容器优化 */
.posts-container:has(.grid-mode) {
  padding: 0 15rpx;
}

/* 响应式容器间距 */
@media (max-width: 600rpx) {
  .posts-container {
    padding: 0 15rpx;
  }
  
  .posts-container:has(.grid-mode) {
    padding: 0 10rpx;
  }
}

@media (min-width: 901rpx) {
  .posts-container {
    padding: 0 30rpx;
  }
  
  .posts-container:has(.grid-mode) {
    padding: 0 25rpx;
  }
}

.posts-grid {
  display: flex;
  flex-direction: column;
}

.posts-grid.grid-mode {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 20rpx;
  padding: 0 10rpx;
}

.post-item {
  background: white;
  border-radius: 25rpx;
  margin-bottom: 25rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.grid-mode .post-item {
  width: 100%;
  margin-bottom: 0;
  padding: 25rpx;
}

/* 响应式布局 - 小屏幕 */
@media (max-width: 600rpx) {
  .posts-grid.grid-mode {
    grid-template-columns: 1fr;
  }
}

/* 响应式布局 - 中等屏幕 */
@media (min-width: 601rpx) and (max-width: 900rpx) {
  .posts-grid.grid-mode {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* 响应式布局 - 大屏幕 */
@media (min-width: 901rpx) {
  .posts-grid.grid-mode {
    grid-template-columns: repeat(3, 1fr);
  }
}

.post-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

.post-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.post-item:active::before {
  opacity: 1;
}

/* 帖子头部 */
.post-header {
  margin-bottom: 25rpx;
}

.user-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #f0f0f0;
}

.grid-mode .user-avatar {
  width: 60rpx;
  height: 60rpx;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.grid-mode .username {
  font-size: 28rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.grid-mode .post-time {
  font-size: 22rpx;
}

.post-category {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.grid-mode .post-category {
  padding: 6rpx 12rpx;
  font-size: 20rpx;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 25rpx;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.7;
  color: #333;
  word-break: break-word;
}

.grid-mode .content-text {
  font-size: 26rpx;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 媒体展示 */
.post-media {
  padding: 0 20rpx 20rpx;
}

.images-grid {
  display: grid;
  gap: 8rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.images-1 {
  grid-template-columns: 1fr;
}

.images-2 {
  grid-template-columns: 1fr 1fr;
}

.images-3 {
  grid-template-columns: 2fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.images-3 .post-image:first-child {
  grid-row: 1 / 3;
}

.images-4 {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.images-many {
  grid-template-columns: 1fr 1fr 1fr;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.images-1 .post-image {
  height: 400rpx;
}

.images-2 .post-image {
  height: 250rpx;
}

.images-3 .post-image:first-child {
  height: 400rpx;
}

.images-3 .post-image:not(:first-child) {
  height: 196rpx;
}

.images-4 .post-image {
  height: 200rpx;
}

/* 网格模式下的图片自适应 */
.grid-mode .post-image {
  height: 150rpx;
}

.grid-mode .images-1 .post-image {
  height: 300rpx;
}

.grid-mode .images-2 .post-image {
  height: 180rpx;
}

.grid-mode .images-3 .post-image:first-child {
  height: 300rpx;
}

.grid-mode .images-3 .post-image:not(:first-child) {
  height: 146rpx;
}

.grid-mode .images-4 .post-image {
  height: 150rpx;
}

/* 小屏幕下的图片优化 */
@media (max-width: 600rpx) {
  .grid-mode .post-image {
    height: 180rpx;
  }
  
  .grid-mode .images-1 .post-image {
    height: 350rpx;
  }
  
  .grid-mode .images-2 .post-image {
    height: 200rpx;
  }
}

.post-video {
  width: 100%;
  border-radius: 15rpx;
}

/* 互动区域 */
.post-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 0;
  margin-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.grid-mode .post-actions {
  padding: 15rpx 0 0;
  margin-top: 15rpx;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  transition: all 0.3s ease;
  background: #f8f9ff;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  min-width: 80rpx;
  justify-content: center;
}

.grid-mode .action-item {
  padding: 8rpx 12rpx;
  min-width: 60rpx;
}

.action-item:active {
  transform: scale(0.95);
  background: rgba(102, 126, 234, 0.1);
}

.like-btn.liked {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  border-color: #ff6b6b;
}

.like-btn.liked .action-text {
  color: white;
}

.comment-btn:active {
  background: rgba(52, 152, 219, 0.1);
  border-color: #3498db;
}

.share-btn:active {
  background: rgba(46, 204, 113, 0.1);
  border-color: #2ecc71;
}

.more-btn:active {
  background: rgba(155, 89, 182, 0.1);
  border-color: #9b59b6;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  transition: all 0.3s ease;
}

.grid-mode .action-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.3s ease;
}

.grid-mode .action-text {
  font-size: 22rpx;
}

.like-btn.liked .action-icon {
  transform: scale(1.2);
}

.more-btn .action-icon {
  margin-right: 0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 50rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-container::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  gap: 15rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
}

.loading-more text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
  position: relative;
}

.no-more::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 20%;
  right: 20%;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e0e0e0, transparent);
  transform: translateY(-50%);
  z-index: 0;
}

.no-more text {
  background: white;
  padding: 0 20rpx;
  position: relative;
  z-index: 1;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
  filter: grayscale(20%);
}

.empty-state text {
  display: block;
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-state .empty-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 15rpx;
  line-height: 1.5;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 25rpx 25rpx 0 0;
  width: 100%;
  max-height: 80vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

/* 发布表单 */
.publish-form {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.publish-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #f5f5f5;
  border-radius: 15rpx;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.publish-textarea:focus {
  border-color: #8B4513;
}

/* 媒体选择 */
.media-section {
  margin-bottom: 30rpx;
}

.image-preview {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.preview-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 15rpx;
  overflow: hidden;
}

.preview-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.video-preview {
  position: relative;
  margin-bottom: 20rpx;
}

.video-preview video {
  width: 100%;
  border-radius: 15rpx;
}

.video-delete {
  top: 15rpx;
  right: 15rpx;
}

.media-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.media-btn {
  flex: 1;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #8B4513;
}

.media-btn:disabled {
  opacity: 0.5;
  color: #999;
}

.media-btn image {
  width: 32rpx;
  height: 32rpx;
}

/* 模态框底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.cancel-btn {
  flex: 1;
  background: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  min-width: 0;
}

.publish-submit-btn {
  flex: 2;
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  min-width: 0;
}

.publish-submit-btn:disabled {
  background: #ccc;
  color: #999;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-content image {
  width: 80rpx;
  height: 80rpx;
}

.loading-content text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: bold;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .posts-container {
    padding: 0 20rpx;
  }
  
  .header {
    padding: 50rpx 20rpx 20rpx;
  }
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    transform: translateY(30rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.post-item {
  animation: slideInUp 0.5s ease-out;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.action-item:active {
  animation: pulse 0.3s ease;
}

/* 点赞动画 */
@keyframes heartBeat {
  0% {
    transform: scale(1);
  }
  14% {
    transform: scale(1.3);
  }
  28% {
    transform: scale(1);
  }
  42% {
    transform: scale(1.3);
  }
  70% {
    transform: scale(1);
  }
}

.action-icon.liked {
  animation: heartBeat 0.8s ease;
}